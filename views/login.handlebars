<div class="card">
  <h3 class="card-header">Login</h3>
  
  <form class="login-form">
  
    <label class="form-label" for="username-login">Username</label>
    <input class="form-input" type="text" id="username-login" autofocus="true" />

    <label class="form-label" for="password-login">Password</label>
    <input class="form-input" type="password" id="password-login" autofocus="true" />

    <button class="form-btn" type="submit">Login</button>
    <a class="login-link" href="/signup">Sign up</a>

</form>
</div>

<script src="/javascript/login.js"></script>